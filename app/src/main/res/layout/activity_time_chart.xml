<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.eunsiljo.timepercentchart.TimeChartActivity"
    android:padding="@dimen/common_margin_medium"
    android:background="@color/white">

    <TextView
        android:id="@+id/btnRefresh"
        style="@style/textMedium"
        android:layout_gravity="right"
        android:text="@string/refresh"
        android:drawableLeft="@drawable/ic_refresh_black_24dp" />

    <com.github.eunsiljo.timepercentchartlib.view.TimeChartView
        android:id="@+id/timeChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</FrameLayout>